{
  "manifest_version": 3,
  "name": "Shuffle Tabs",
  "version": "0.0.1",
  "action": {
    "default_title": "Click to shuffle",
    "default_popup": "popup.html"
  },
  "permissions": [
        "alarms",
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "polling.js"
  },
  "description": "A plain text description"
}